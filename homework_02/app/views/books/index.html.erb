
<% @books.each do |book| %>
  <div class="booyah-box col-10 offset-1">
    <h1><%= link_to book.title, book_path(book) %></h1><br />
    <i><%= book.author %></i><br />
    <p><%= book.genre %></p><br />
    <p><%= book.classification %></p><br />
    <p><%= book.prose %></p><br />
    <p><%= book.year %></p><br />
  </div>

<% end %>