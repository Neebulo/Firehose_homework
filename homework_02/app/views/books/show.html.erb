<div class="booyah-box col-10 offset-1">
  <h1><%= @book.title %></h1>
  <i><%= @book.authors.map(&:full_name).join(', ') %></i>
  <br/><br/>
  <p><%= @book.genre %></p>
  <p><%= @book.classification %></p>
  <p><%= @book.prose %></p>
  <p><%= @book.year %></p>

  <div class="float-right">
    <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-primary' %>
    <%= link_to 'Destroy', book_path(@book), method: :delete, 
    data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger' %>
  </div>



</div>