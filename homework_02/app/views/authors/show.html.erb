<h1>Authors#show</h1>
<p>Find me in app/views/authors/show.html.erb</p>


<div class="booyah-box col-10 offset-1">
  <h1><%= @book.title %></h1>
  <i><%= @book.author %></i>
  <br/><br/>
  <p><%= @book.genre %></p>
  <p><%= @book.classification %></p>
  <p><%= @book.prose %></p>
  <p><%= @book.year %></p>

  <div class="float-right">
    <%= link_to 'Edit', edit_author_path(@author), class: 'btn btn-primary' %>
    <%= link_to 'Destroy', author_path(@author), method: :delete, 
    data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger' %>
  </div>



</div>